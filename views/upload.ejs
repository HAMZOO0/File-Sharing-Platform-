<body>
    <form action="/upload" method="post" enctype="multipart/form-data">
        <div class="file is-info has-name">
            <label class="file-label">
                <input class="file-input" type="file" name="fileuploader" onchange="displayFileName(this)" />
                <span class="file-cta">
                    <span class="file-icon">
                        <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label">Choose a Fileâ€¦</span>
                </span>
                <span class="file-name">No file chosen</span>
            </label>
        </div>
        <hr>
        <div class="buttons">

          <button class="button is-primary" type="submit" style="
          background-color: #00BCD4; ">Upload</button>      
            </div>
    </form>
    
  
  

    <script>
        function displayFileName(input) {
            if (input.files.length > 0) {
                const fileName = input.files[0].name; // Get the file name
                const fileLabel = input.parentNode.querySelector('.file-name'); // Find the file-name span

                if (fileLabel) { // Ensure fileLabel is found
                    fileLabel.textContent = fileName; // Update the file name display
                } else {
                    console.error('File name span not found.'); // Log an error if fileLabel is not found
                }
            }
        }
    </script>
